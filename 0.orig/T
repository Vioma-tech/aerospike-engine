FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1000;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 300;
    }

    walls
    {
        type            zeroGradient;
    }

    wedge
    {
        type            wedge;
    }

    defaultFaces
    {
        type            empty;
    }
}


